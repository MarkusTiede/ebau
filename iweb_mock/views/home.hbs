<p>Willkommen!</p>

{{#if id}}
<p id="hash">Sie sind angemeldet als <strong>{{id}}</strong>.</p>
{{#if overview}}
<table id="overview">
  <thead>
    <tr>
      <td>Name</td>
      <td>Letzte Änderung</td>
      <td>Status</td>
    </tr>
  </thead>
  <tbody>
    {{#each overview as |entry|}}
    <tr>
      <td>{{entry.name}}</td>
      <td>{{entry.last_modified}}</td>
      <td>{{entry.status}}</td>
      <td>
        <form action="{{../camacUrl}}/portal/user/entry/resource-id/248/instance-id/{{entry.id}}" method="POST">
          <input type="hidden" name="X-Camac-Session" value={{../hash}}>
          <input type="submit" id="open" value="Öffnen">
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{/if}}
<a id="toCamac" href="{{camacUrl}}/portal/user/entry/resource-id/248?X-Camac-Session={{hash}}&firstName=Hans&lastName=Peter&street=foobar+8&zip=3076&city=Worb">Dossier erstellen</a>

<a id="logout" href="{{camacUrl}}/portal/user/logout/resource-id/248?X-Camac-Session={{hash}}&X-Redirect-To={{base}}logout">Logout</a>

{{else}}
<form action="{{base}}hash" method="POST">
  <input type="text" name="id" required placeholder="Nutzername">
  <input type="submit" value="Login">
</form>
{{/if}}
